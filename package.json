{
  "name": "project-code-snapshot",
  "publisher": "Mihaidono",
  "displayName": "Project Code Snapshot",
  "description": "Aggregates source code from a selected folder recursively into a single file, including file paths and names, to generate project context for AI tools.",
  "version": "0.1.1",
  "icon": "assets/icon.png",
  "keywords": [
    "vscode",
    "bundle",
    "context",
    "code"
  ],
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mihaidono/code-context-extractor"
  },
  "contributes": {
    "commands": [
      {
        "command": "project-code-snapshot.bundle",
        "title": "Create Code Snapshot File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.7",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "ignore": "^7.0.5",
    "punycode": "^2.3.1"
  }
}
